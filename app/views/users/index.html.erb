<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<%= link_to edit_user_path(current_user.id) do %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_8306"></i>
				<% end %>
			</div>

			<h2>New Book</h2>

			<%= form_for (@book) , url: "/books" do |f| %>
			<div class="field">
			<label class="new-book">Title</label>
			<div class="row">
			<%= f.text_field :title, class:"col-xs-12" %>
			</div>
			</div>

			<div class="field">
			<label class="new-book">Opinion</label>
			<div class="row">
			<%= f.text_area :body , class:"col-xs-12"%>
			</div>
			</div>

			<div class="row">
			<%= f.submit "Create Book", class:"col-xs-12 btn btn-primary" %>
			</div>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
						</td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>