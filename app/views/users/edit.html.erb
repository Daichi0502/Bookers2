<div class="container">
	<div class="row edit-profile">
	<h2>User info</h2>

	<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	<div class="error-explanation">
  	<h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
  	<ul>
  		<% @user.errors.full_messages.each do |message| %>
  		<li><%= message %></li>
  		<% end %>
  	</ul>
  </div>
  <% end %>

	<div class="field">
	<label>Name</label>
	<%= f.text_field :name, autofocus: true, placeholder:"#{@user.name}" %>
	</div>
	<div class="field">
	<label>Image</label>
	<%= f.attachment_field :profile_image %>
	</div>
	<div class="field">
	<label class="field">Introduction</label>
	<%= f.text_area :introduction %>
	</div>

	<%= f.submit "Update User" %>

	<% end %>



</div>
</div>