<div class="container">
	<% if @book.errors.any? %>
		<div class="error-explanation">
  			<h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
  				<ul>
  				<% @book.errors.full_messages.each do |message| %>
  				<li><%= message %></li>
  				<% end %>
  				</ul>
  		</div>
  	<% end %>
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<%= link_to edit_user_path(current_user.id) do %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_8306"></i>
				<% end %>
			</div>

			<h2>New Book</h2>

			<%= form_for @book do |f| %>
			<div class="field">
			<label class="new-book">Title</label>
			<div class="row">
			<%= f.text_field :title, class:"col-xs-12" %>
			</div>
			</div>

			<div class="field">
			<label class="new-book">Opinion</label>
			<div class="row">
			<%= f.text_area :body , class:"col-xs-12"%>
			</div>
			</div>

			<div class="row">
			<%= f.submit "Create Book", class:"col-xs-12 btn btn-primary" %>
			</div>
			<% end %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
						</td>
						<td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>