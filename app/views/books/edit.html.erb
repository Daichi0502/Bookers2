<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
			<div class="error-explanation">
  				<h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
  					<ul>
  						<% @book.errors.full_messages.each do |message| %>
  						<li><%= message %></li>
  						<% end %>
  					</ul>
  			</div>
  			<% end %>
			<%= form_for(@book) do |f| %>
			<div class="field">
			<label class="edit-title">Title</label>
			<div class="row">
			<%= f.text_field :title, autofocus: true, class:"col-xs-12" %>
			</div>
			</div>

			<div class="field">
			<label class="edit-opinion">Opinion</label>
			<div class="row">
			<%= f.text_area :body, class:"col-xs-12" %>
			</div>
			</div>

			<div class="field">
			<div class="row">
			<%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
			</div>
			</div>

			<% end %>

			<%= link_to "Show", book_path(@book.id) %>
			<span>|</span>
			<%= link_to "Back", books_path %>

	</div>
</div>